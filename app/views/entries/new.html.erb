<h1>User: <%= current_user.name %> </h1>
<h2>New Entry Page</h2>



<%= form_for [@user, @entry] do |f| %>
<%= f.label :title %>
<%= f.text_field :title%><br>
<%= f.label :post %><br>
<%= f.text_field :post, class: "post" %>

<%= f.submit "Save" %>
<% end %>

<div class = "outputArea">
<div id = "titleSpace"><b></b>
<br><br></div>

<div id = "postSpace">
Post content Here</div>
</div>


<script>
let titleArea = document.querySelector("#titleSpace > b")

let getTitle = document.querySelector("#entry_title")
getTitle.addEventListener("keydown", function(e) {
  //  if (getTitle.value.length > 5) debugger
    if (e.keyCode==8) {
        titleArea.innerText = titleArea.innerText.slice(0, -1)
    }
    titleArea.innerText = e.target.value
})

</script>



